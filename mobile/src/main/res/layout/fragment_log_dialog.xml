<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialog.logging.LogDialogFragment">

    <TextView
        android:id="@+id/log_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_name" />

    <EditText
        android:id="@+id/log_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:id="@+id/log_samples_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_samples" />

    <EditText
        android:id="@+id/log_samples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

</LinearLayout>
