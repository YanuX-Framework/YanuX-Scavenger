<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="category_general"
        app:title="@string/preferences_category_general">
        <EditTextPreference
            app:key="display_name"
            app:title="@string/preferences_title_display_name"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="category_background_service"
        app:title="@string/preferences_category_background_service">
        <SwitchPreference
            android:defaultValue="false"
            app:key="allow_background_service"
            app:title="@string/preferences_title_allow_background_service" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="category_help"
        app:title="@string/preferences_category_help">
        <Preference
            app:key="feedback"
            app:summary="@string/preferences_summary_feedback"
            app:title="@string/preferences_title_feedback"/>
    </PreferenceCategory>

</PreferenceScreen>